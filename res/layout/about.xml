<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF"
	android:id="@+id/aboutLayout"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	>
	<ImageView
		android:id="@+id/imgLichtstrahlen"
		android:layout_alignParentTop="true"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:padding="10dp"
		android:src="@drawable/lichtstrahlen"
		/>
	<ImageView
		android:id="@+id/imgBorn"
		android:layout_alignParentBottom="true"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:src="@drawable/born"
		/>
	<TextView
		android:id="@+id/txtVersion"
		android:layout_alignBottom="@id/imgLichtstrahlen"
		android:layout_alignParentRight="true"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:padding="10dp"
		android:textSize="11dp"
		/>
	<ScrollView
		android:layout_above="@id/imgBorn"
		android:layout_below="@id/imgLichtstrahlen"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		>
		<TextView
			android:id="@+id/txtAbout"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:padding="10dp"
			android:text="@string/about"
			android:textColor="#000000"
			android:textSize="11dp"
			android:autoLink="all"
			/>
	</ScrollView>

</RelativeLayout>